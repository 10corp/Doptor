{
	"name": "doptor/doptor",
	"description": "A Laravel Based CMS",
	"keywords": ["framework", "laravel", "cms"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.1.*",
		"cartalyst/sentry": "2.0.*",
		"robclancy/presenter": "1.2.*",
		"davejamesmiller/laravel-breadcrumbs": "~2.1.0",
		"creolab/laravel-modules": "dev-master",
		"intervention/image": "dev-master",
		"vespakoen/menu": "dev-master",
		"guzzle/guzzle": "dev-master",
		"barryvdh/laravel-dompdf": "*"
	},
	"require-dev": {
		"way/generators": "2.*",
		"barryvdh/laravel-ide-helper": "dev-master"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/services",
			"app/presenters",
			"app/services/Validation",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php",
			"app/components",
			"app/components/posts/database/migrations",
			"app/components/posts/database/seeds",
			"app/modules"
		],
		"files": [
			"app/helpers.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
